---
import "../styles/styles.css"
import Button from "./Button.astro";
const {header, image, text, buyTicketUrl, date, start_time, end_time, pris} = Astro.props;
---

<div class="card-container">
<article class="liveshow">
  <img src=`https://2semestereksamen.netlify.app/billeder/${image}` alt={header} /> 
  <p>{date}</p>
  <p>{start_time.split(':').slice(0, 2).join(':')} til {end_time.split(':').slice(0, 2).join(':')}</p>
  <h3>{header}</h3>

  <div class="text">
    <p>{text}</p>
    <p>{pris}kr.</p>
    {buyTicketUrl && (
            <a href={buyTicketUrl} target="_blank" rel="noopener noreferrer">
              <Button variant="primary">KÃ¸b billet</Button>
            </a>)}
            
  </div>
  
  <slot />
</article>
</div>



<style>
 
  .liveshow p {
    width: 80%;
    margin-bottom: 4px; 
  margin-inline: 0; }

  .liveshow h2 {
    width: 100%;
  }
  .liveshow h3 {
    margin-inline: 0;
  }

  .text p {
    font-size: 1rem;
    color: #fffdea;
    text-align: left;
    margin-inline: 0;
  }

  @media (min-width: 768px) {
    .liveshow img {
    width: 100%;
    height: 445px;
    border-radius: 30px;
    object-fit: cover;
  }
}

@media (max-width: 768px) {
    .liveshow img {
   width: 100%; 
  height: 380px;
  border-radius: 10px;
  object-fit: cover; 
  }
.liveshow h3 {
  font-size: 1.5rem;
}
}
 .liveshow p {
    width: 100%;
    margin-bottom: -5px;  }

</style>
